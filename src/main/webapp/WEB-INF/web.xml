<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true">

    <servlet>
      <servlet-name>TaskListServlet</servlet-name>
      <servlet-class>by.vsu.web.TaskListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TaskListServlet</servlet-name>
        <url-pattern>/task/list.html</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>TaskListViewServlet</servlet-name>
      <servlet-class>by.vsu.web.TaskListViewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TaskListViewServlet</servlet-name>
        <url-pattern>/WEB-INF/task/list.html</url-pattern>
    </servlet-mapping>
</web-app>
